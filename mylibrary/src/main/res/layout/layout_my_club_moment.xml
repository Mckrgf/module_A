<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:round_corner="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:background="@color/white">


    <TextView
        android:id="@+id/tv_club_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="嘉兴嘉友会"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新"
        android:textSize="10dp"
        android:textColor="#009200"
        android:layout_marginLeft="4dp"
        app:layout_constraintStart_toEndOf="@+id/tv_club_name"
        app:layout_constraintTop_toTopOf="@+id/tv_club_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_club_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/view_click"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/iv_cover"/>
    <View
        android:id="@+id/iv_cover_rotate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#009100"
        android:rotation="10"
        app:layout_constraintStart_toStartOf="@+id/iv_cover"
        app:layout_constraintEnd_toEndOf="@id/iv_cover"
        app:layout_constraintTop_toTopOf="@+id/iv_cover"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"/>

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="106dp"
        android:layout_height="82dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/tv_club_name"
        app:layout_constraintTop_toBottomOf="@id/tv_club_name"/>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        tools:text="sdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdf"
        app:layout_constraintTop_toTopOf="@+id/iv_cover"
        app:layout_constraintStart_toEndOf="@+id/iv_cover"
        app:layout_constraintEnd_toEndOf="parent"/>

